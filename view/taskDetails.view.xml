
<mvc:View
 
xmlns:l="sap.ui.layout"
xmlns:f="sap.ui.layout.form"
xmlns:html="http://www.w3.org/1999/xhtml"
xmlns:mvc="sap.ui.core.mvc"
xmlns="sap.m"
busyIndicatorDelay="0"
 
controllerName="Nathan.Shaw.controller.taskDetails"
displayBlock="true">

<Page

id="taskDetails"
showNavButton="true"
 navButtonPress="onNavBack"
 title="The UI5 Colosseum - Task Details Page">
<content>
    <f:SimpleForm
    minWidth="1024"
    editable="false"
    layout="ResponsiveGridLayout"
    labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4"
    columnsL="1" columnsM="1"
    >
    <f:content id="grab">
        <VBox 
       >
        <Label text="{i18n>formTaskName}"/>
        <Text text='{myService>Title}' />
        <Label text="{i18n>formCreatedBy}"/>
        <Text text="{myService>Createdby}" />
        <Label text="{i18n>formDescription}"/>
        <Text text="{myService>Description}" />
        <Label text="{i18n>formDueDate}"/>
        <Text text="{myService>Duedate}" />
        </VBox>
       
    </f:content>
</f:SimpleForm>    



</content>
</Page>
</mvc:View>